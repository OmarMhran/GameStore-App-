<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

       >

        <View
            android:id="@+id/viewLine1"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintEnd_toStartOf="@id/cvStep"
            app:layout_constraintBottom_toBottomOf="@id/cvStep"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/cvStep" />


        <LinearLayout
            android:id="@+id/cvStep"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/border_step_background"
            android:orientation="vertical"
            app:cardCornerRadius="@dimen/margin_4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/margin_32"/>


        <TextView
            android:id="@+id/tvStepName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_4"
            android:layout_marginBottom="@dimen/margin_8"
            android:text="Personal Information"
            android:textColor="@color/color1"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/cvStep"
            app:layout_constraintStart_toStartOf="@+id/cvStep"
            app:layout_constraintTop_toBottomOf="@id/cvStep" />


        <View
            android:id="@+id/viewLine2"
            android:layout_width="60dp"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@id/cvStep"
            app:layout_constraintStart_toEndOf="@id/cvStep"
            app:layout_constraintTop_toTopOf="@id/cvStep" />




    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
