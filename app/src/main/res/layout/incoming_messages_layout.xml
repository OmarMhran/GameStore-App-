<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_16"
    app:cardCornerRadius="@dimen/margin_4"
    app:cardBackgroundColor="@color/gray">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/margin_8">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivSellerImageIncomingItem"
            android:layout_width="@dimen/margin_48"
            android:layout_height="@dimen/margin_48"
            app:civ_border_color="@color/color1"
            app:civ_border_width="1dp"
            android:layout_marginStart="@dimen/margin_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


        <TextView
            android:id="@+id/tvCustomerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/margin_16"
            app:layout_constraintStart_toEndOf="@id/ivSellerImageIncomingItem"
            app:layout_constraintTop_toTopOf="@id/ivSellerImageIncomingItem"
            app:layout_constraintBottom_toBottomOf="@id/ivSellerImageIncomingItem"
            android:text="User_2"
            android:textSize="@dimen/medium_title"/>



        <TextView
            android:id="@+id/tvCustomerMessage"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/ibArrow"
            android:textSize="@dimen/medium_title"
            app:layout_constraintTop_toTopOf="@id/ibArrow"
            app:layout_constraintBottom_toBottomOf="@id/ibArrow"
            android:text="hello"
            android:gravity="center"/>



        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ibArrow"
            android:layout_width="@dimen/margin_32"
            android:layout_height="@dimen/margin_32"
            android:src="@drawable/ic_arrow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="@dimen/margin_8"/>





    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>